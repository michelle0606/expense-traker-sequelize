extends layouts/main.pug

block body
  div(class="row mt-5")
  div(class="col-md-6 m-auto")
    div(class="card card-body")
      h1(class="text-center mb-3") Register
      form(action="/users/register" method="POST")
        div(class="form-group")
          label(for="name") Name
          input(type="text" id="name" name="name" class="form-control" placeholder="Enter Name")
        div(class="form-group")
          label(for="email") Email
          input(type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required)
        div(class="form-group")
          label(for="password") Password
          input(type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required)
        div(class="form-group")
          label(for="password2") Confirm Password
          input(type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password" required)
        button(type="submit" class="btn btn-primary btn-block") Register
      p(class="lead mt-4") Have an Account? 
        a(href="/users/login") Login